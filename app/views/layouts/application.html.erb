<!DOCTYPE html>
<html>
<head>
  <title>TMS</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
	<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet">
 	 <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Electronic Payment Solutions, credit card processing, point of sale solutions hardware and software and other tools to help businesses manage payments.">
    <meta name="author" content="Tri-State Merchant Services Inc.">
    <%= favicon_link_tag '/favicon.ico' %>
  
</head>
<body data-spy="scroll" data-target=".navbar">
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
         <div class="navbar-brand"><%= link_to image_tag('logo.png'), '/pages/landing_page'  %>
         </div>
        </div>
<div class="navbar-collapse collapse">
          <div class="navbar-right">
            <div class="row">
             <p>Questions? Call us at 1-888-952-3600 or <a href="mailto:sales@tmsmerchant.com?subject=Please Contact me about VMC">contact us.</a>

              <button type="submit" class="btn btn-gold">Sign up for a demo</button>
            </div>
          <div class="row">
           <ul class="list-inline rightnav">
            
            <li><%= link_to 'Features', '/pages/features' %></li>
            <li><%= link_to 'Pricing', '/pages/pricing' %></li>
            <li><%= link_to 'Get Started', '/pages/get_started' %></li>
          	</ul>
        	</div>
          </div>
        </div><!--/.navbar-collapse -->
      </div>
    </div> <!--end nav bar-->


<%= yield %>

<hr>
 <div class="container footer">
         <footer>
          <ul class="list-inline">
            
            <li><%= link_to 'Home', '/pages/landing_page' %></li>
            <li><%= link_to 'Features', '/pages/features' %></li>
            <li><%= link_to 'Pricing', '/pages/pricing' %></li>
             <li><%= link_to 'Get Started', '/pages/get_started' %></li>
            <li><%= link_to 'About', '/pages/about' %></li>
            <li><%= link_to 'Contact', '/pages/contact' %></li>
         

           
          </ul>
          <p class="text-right"><small>&copy; Tri-State Merchant Services, Inc. 2014</small></p>
      </footer>
      </div>

    
    <script type="text/javascript">$.stellar();
     
  var $root = $('html, body');
    $('.navbar-nav a').click(function() {
        var href = $.attr(this, 'href');
        $root.animate({
            scrollTop: $(href).offset().top
        }, 500, function () {
            window.location.hash = href;
        });
        return false;
    });
    </script>

</body>
</html>
